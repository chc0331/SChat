<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="textInputStyle">@style/SChatTextInputStyle</item>
        <item name="preferenceStyle">@style/CustomPreference</item>
    </style>

    <style name="DialogActivityTheme" parent="AppTheme">
        <item name="android:theme">@android:style/Theme.Holo.Dialog.NoActionBar</item>
    </style>

    <style name="SChatTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/light_blue</item>
        <item name="android:textColorHint">@color/blue</item>
    </style>

    <style name="SChatEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>

    <style name="textStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/edit_text_border</item>
    </style>

    <style name="CustomPreference" parent="Preference">
        <item name="android:layout">@layout/custom_preference_layout</item>
    </style>

</resources>
