<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="signUpViewModel"
            type="com.example.myapplication.toyproject.login.presenter.login.signup.SignUpViewModel" />

        <variable
            name="signUpFragment"
            type="com.example.myapplication.toyproject.login.presenter.login.signup.SignUpFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingBottom="30dp"
        tools:context=".login.presenter.login.signup.SignUpFragment">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="360dp"
            android:layout_height="2dp"
            android:layout_marginTop="184dp"
            android:background="@color/dark_gray"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/edit_name"
            style="@style/editTextStyle"
            android:hint="이름"
            android:inputType="text"
            android:text="@={signUpViewModel.name}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />


        <EditText
            android:id="@+id/edit_number"
            style="@style/editTextStyle"
            android:hint="휴대전화(-없이 입력)"
            android:inputType="number"
            android:text="@={signUpViewModel.phone}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_name" />

        <EditText
            android:id="@+id/edit_id"
            style="@style/editTextStyle"
            android:hint="아이디"
            android:inputType="textEmailAddress"
            android:text="@={signUpViewModel.id}"
            app:layout_constraintEnd_toStartOf="@+id/check_id_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_number" />

        <EditText
            android:id="@+id/edit_pw"
            style="@style/editTextStyle"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:text="@={signUpViewModel.password}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_id" />

        <Button
            android:id="@+id/check_id_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/dark_gray"
            android:text="중복 확인"
            android:textSize="9dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_pw"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edit_id"
            app:layout_constraintTop_toBottomOf="@+id/edit_number" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:backgroundTint="@color/light_blue_2"
            android:onClick="@{()->signUpFragment.registerClicked()}"
            android:text="등록"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>